<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/passenger_label"
            tools:text="@string/passenger_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/passenger_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintLeft_toLeftOf="@+id/passenger_label"
            app:layout_constraintTop_toBottomOf="@+id/passenger_label"
            tools:text="@string/passenger_name" />

        <ImageView
            android:id="@+id/left_rectangle"
            android:layout_width="60dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/shape_rectangle_stroke"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passenger_name"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp" />

        <ImageView
            android:id="@+id/divider"
            android:background="@color/colorPrimaryLight"
            android:layout_height="1dp"
            android:layout_width="0dp"
            app:layout_constraintLeft_toRightOf="@+id/left_rectangle"
            app:layout_constraintRight_toLeftOf="@+id/right_rectangle"
            app:layout_constraintTop_toBottomOf="@+id/right_rectangle"
            app:layout_constraintBottom_toTopOf="@+id/right_rectangle"/>

        <ImageView
            android:id="@+id/right_rectangle"
            android:layout_width="60dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/shape_rectangle_stroke"
            android:layout_marginRight="32dp"
            tool:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            tool:layout_constraintTop_toBottomOf="@+id/passenger_name" />

        <TextView
            android:id="@+id/origin_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tool:layout_constraintBottom_toBottomOf="@+id/left_rectangle"
            tool:layout_constraintLeft_toLeftOf="@+id/left_rectangle"
            tool:layout_constraintRight_toLeftOf="@+id/divider"
            tool:layout_constraintTop_toTopOf="@+id/left_rectangle"
            tools:text="@string/origin_code" />

        <TextView
            android:id="@+id/destination_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="@string/destination_code"
            tool:layout_constraintBottom_toBottomOf="@+id/right_rectangle"
            tool:layout_constraintTop_toTopOf="@+id/right_rectangle"
            tool:layout_constraintRight_toRightOf="@+id/right_rectangle"
            tool:layout_constraintLeft_toLeftOf="@+id/right_rectangle"/>

        <TextView
            android:id="@+id/flight_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorPrimaryDark"
            tool:layout_constraintLeft_toLeftOf="@+id/divider"
            tool:layout_constraintRight_toLeftOf="@+id/right_rectangle"
            tool:layout_constraintTop_toBottomOf="@+id/divider"
            tools:text="@string/flight_code" />

        <ImageView
            android:id="@+id/plane_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/art_plane"
            tool:layout_constraintRight_toLeftOf="@+id/right_rectangle"
            android:layout_marginRight="8dp"
            tool:layout_constraintLeft_toRightOf="@+id/left_rectangle"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            tool:layout_constraintBottom_toTopOf="@+id/divider" />

        <TextView
            android:id="@+id/boarding_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boarding_time_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/left_rectangle"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/boarding_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/boarding_time"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="@+id/boarding_label"
            app:layout_constraintTop_toBottomOf="@+id/boarding_label" />

        <TextView
            android:id="@+id/boarding_in_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boarding_in_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginEnd="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/left_rectangle"
            android:layout_marginTop="16dp"
            android:layout_marginRight="40dp" />

        <TextView
            android:id="@+id/boarding_in_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/boarding_in_time"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorBad"
            app:layout_constraintLeft_toLeftOf="@+id/boarding_in_label"
            app:layout_constraintTop_toBottomOf="@+id/boarding_in_label" />

        <TextView
            android:id="@+id/departure_time_label"
            android:text="@string/departure_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/boarding_time"
            app:layout_constraintLeft_toLeftOf="@+id/boarding_time" />

        <TextView
            android:id="@+id/departure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorGood"
            app:layout_constraintLeft_toLeftOf="@+id/departure_time_label"
            app:layout_constraintTop_toBottomOf="@+id/departure_time_label"
            tools:text="@string/departure_time" />

        <TextView
            android:id="@+id/arrival_time_label"
            android:text="@string/arrival_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/boarding_in_time"
            app:layout_constraintLeft_toLeftOf="@+id/boarding_in_time" />

        <TextView
            android:id="@+id/arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorGood"
            app:layout_constraintLeft_toLeftOf="@+id/arrival_time_label"
            app:layout_constraintTop_toBottomOf="@+id/arrival_time_label"
            tools:text="@string/arrival_time" />

        <ImageView
            android:id="@+id/table_header"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:background="@color/colorPrimaryLight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tool:layout_constraintHorizontal_bias="0.0"
            tool:layout_constraintTop_toBottomOf="@+id/departure_time" />

        <ImageView
            android:id="@+id/table_body"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tool:layout_constraintTop_toBottomOf="@+id/table_header"
            tool:layout_constraintBottom_toBottomOf="@+id/gate_name" />

        <TextView
            android:id="@+id/terminal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/terminal_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/black"
            tool:layout_constraintTop_toTopOf="@+id/gate_label"
            android:layout_marginTop="0dp"
            tool:layout_constraintBottom_toBottomOf="@+id/gate_label"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            tool:layout_constraintVertical_bias="0.0"
            tool:layout_constraintLeft_toLeftOf="@+id/table_header"
            tool:layout_constraintRight_toLeftOf="@+id/gate_label"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/gate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/gate_label"
            tools:layout_editor_absoluteX="177dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/black"
            tool:layout_constraintTop_toTopOf="@+id/table_header"
            android:layout_marginTop="8dp"
            tool:layout_constraintBottom_toBottomOf="@+id/table_header"
            android:layout_marginBottom="8dp"
            tool:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/seat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/seat_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/black"
            tool:layout_constraintTop_toTopOf="@+id/gate_label"
            android:layout_marginTop="0dp"
            tool:layout_constraintBottom_toBottomOf="@+id/gate_label"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="8dp"
            tool:layout_constraintVertical_bias="0.0"
            tool:layout_constraintRight_toRightOf="@+id/table_header"
            tool:layout_constraintLeft_toRightOf="@+id/gate_label"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/terminal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/terminal"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            tool:layout_constraintLeft_toLeftOf="@+id/terminal_label"
            tool:layout_constraintRight_toRightOf="@+id/terminal_label"
            tool:layout_constraintTop_toTopOf="@+id/gate_name"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/gate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/gate"
            app:layout_constraintLeft_toLeftOf="@+id/table_body"
            app:layout_constraintRight_toRightOf="@+id/table_body"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            tool:layout_constraintTop_toBottomOf="@+id/gate_label" />

        <TextView
            android:id="@+id/seat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/seat"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            android:layout_marginRight="0dp"
            tool:layout_constraintRight_toRightOf="@+id/seat_label"
            android:layout_marginLeft="0dp"
            tool:layout_constraintLeft_toLeftOf="@+id/seat_label"
            tool:layout_constraintTop_toTopOf="@+id/gate_name"
            android:layout_marginTop="0dp"
            tool:layout_constraintHorizontal_bias="0.48" />

        <ImageView
            android:id="@+id/barcode"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/barcode"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/table_body"
            android:layout_marginTop="16dp" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
